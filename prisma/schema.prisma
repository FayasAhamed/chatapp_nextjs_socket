generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  room Room[]
  chatRoom ChatRoom[]
}

model Room {
  id Int @id @default(autoincrement())
  name String @unique
  ownerId Int
  owner User @relation(fields: [ownerId], references: [id])
  chatRoom ChatRoom[]
}

model ChatRoom {
  id Int @id @default(autoincrement())
  roomId Int
  room Room @relation(fields: [roomId], references: [id])
  users User[]
}
